@model NMCT.Scores.Models.Competition

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name (@Model.Country.Name)</h2>

<table class="table">
    @foreach (var item in Model.Scores)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.TeamA.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.ScoreA)</td>
            <td>@Html.DisplayFor(modelItem => item.ScoreB)</td>
            <td>@Html.DisplayFor(modelItem => item.TeamB.Name)</td>
            <td>@Html.ActionLink("Verwijder", "Delete", new { id = item.Id })</td>
        </tr>
    }
</table>

@Html.ActionLink("Back to list", "Index")
<br />
@Html.ActionLink("Nieuwe score", "New", new { id = Model.Id })