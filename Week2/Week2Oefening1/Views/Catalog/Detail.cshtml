@model Week2Oefening1.Models.Device

@{
    ViewBag.Title = "Detail";
}

<article>
    @{
    String[] modelParts = Model.Name.Split('-');
    }
    <h2>@modelParts[0]</h2>
    <img src="~/Images/@Model.Image" />
    <p>Model:</p>
    <ul>
        <li>@Model.Name</li>
    </ul>
    <p>Huur mij voor:</p>
    <ul>
        <li>@Model.RentingPrice</li>
    </ul>
    <p>Stock te verhuren:</p>
    <ul>
        <li>@Model.Stock</li>
    </ul>
</article>

